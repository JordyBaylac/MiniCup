{
    "extends": "tslint:recommended",
    "rulesDirectory": ["./lib"],

    "rules": {
        
        "max-line-length": {
            "options": [120]
        },
        "comment-format": false,
        "no-trailing-whitespace": false,
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "trailing-comma": false,
        "object-literal-sort-keys": false,
        
        "no-console": {
            "severity": "off",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "quotemark": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}